<% confirm = false if confirm.nil? %>
<% method = "GET" if method.nil? %>

<%= form_for(:button, :url => link, :html => {:method => method}) do  %>
<button type="submit" class="btn btn-default" <% if confirm then %> data-confirm="Are you sure?"<% end %>">
	<span class="glyphicon glyphicon-<%= icon %>"></span>&nbsp;<%= caption %>
</button>
<% end %>