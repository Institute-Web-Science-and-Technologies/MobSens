<!-- A container for the map --><div id="map" style="height: 600px;">				</div><!-- Including the Leaflet JavaScript file --><script src="http://cdn.leafletjs.com/leaflet-0.7.1/leaflet.js"></script><script>	// Creating an array of coordinates	var coordinates = [    <% locations.each do |location| %>    	L.latLng(<%= location.latitude %>, <%= location.longitude %>),	<% end %>    ];    // Creating the map	var map = L.map('map');					L.tileLayer('http://{s}.tile.thunderforest.com/cycle/{z}/{x}/{y}.png', { // Setting the URL of the OpenCycleMap tile layer		attribution: '&copy; <a href="http://www.thunderforest.com">Thunderforest.com</a>. Data &copy; CC-BY-SA <a href="http://www.openstreetmap.org">OpenStreetMap</a> contributors', // Setting the attribution text		maxZoom: 18 // Setting the maximum zoom level	}).addTo(map); // Adding the tile layer to the map					// Creating a marker with a Popup -> might be useful for displaying events	// var marker = L.marker(LatLng).addTo(map); // Adding a marker to the map	// marker.bindPopup("<b>Hello World!</b><br>I am a popup.").openPopup(); // Binds a popup to the marker and opens it					// Creating the path for the coordinates	var polyline = L.polyline(coordinates, {color: 'red'}).addTo(map); // Creating a polyline					map.fitBounds(polyline.getBounds()); // Setting a map view that contains the path with maximum zoom level possible</script><!-- Using Google Maps <div id="map-canvas" style="height:600px; width:100%; margin: 0px; padding:0px;"></div><script>        var coordinates = [        <% locations.each do |location| %>                new google.maps.LatLng(<%= location.latitude %>, <%= location.longitude %>),        <% end %>        ];        google.maps.event.addDomListener(window, 'load', google_maps_init('map-canvas', <%= locations.first.latitude %>, <%= locations.first.longitude %>, coordinates));</script>-->