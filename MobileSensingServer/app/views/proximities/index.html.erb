<h1>Listing proximities</h1>

<table>
  <thead>
    <tr>
      <th>Recording</th>
      <th>Time</th>
      <th>Proximity</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @proximities.each do |proximity| %>
      <tr>
        <td><%= proximity.recording %></td>
        <td><%= proximity.time %></td>
        <td><%= proximity.proximity %></td>
        <td><%= link_to 'Show', proximity %></td>
        <td><%= link_to 'Edit', edit_proximity_path(proximity) %></td>
        <td><%= link_to 'Destroy', proximity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

