<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View
        android:id="@+id/Frage1"
        android:layout_width="1000dp"
        android:layout_height="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:background="#eaeaea" />

    <View
        android:id="@+id/Frage2"
        android:layout_width="1000dp"
        android:layout_height="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="200dp"
        android:background="#eaeaea" />

    <TextView
        android:id="@+id/bewertung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Bewertung"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/settings_mail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/settings_title"
        android:layout_alignTop="@+id/Frage2"
        android:layout_marginTop="18dp"
        android:text="Frage 2"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Frage1"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/bewertung"
        android:text="Frage 1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="18dp" />

    <RatingBar
        android:id="@+id/ratingBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Frage2"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Frage1"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/Frage1"
            android:layout_alignLeft="@+id/settings_title"
            android:layout_marginLeft="30dp"
            android:checked="true"
            android:text="Nein" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/Frage1"
            android:layout_marginLeft="31dp"
            android:layout_toRightOf="@+id/radio0"
            android:text="Ja" />
    </RadioGroup>

    <Button
        android:id="@+id/main_sport"
        style="@style/gray_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:onClick="submit"
        android:text="Absenden" />

</RelativeLayout>